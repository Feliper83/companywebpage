{
  "name": "cybevite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "// ---------------------- LOCAL DEV ----------------------": "",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "vercel-build": "prisma generate && prisma migrate deploy && node src/server/server.js && vite build",
    "client:build": "vite build",
    "client:preview": "vite preview",
    "server:dev": "node src/server/index.js",
    "server:start": "node src/server/index.js",
    "// ---------------------- PRISMA -------------------------": "",
    "prisma:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force",
    "prisma:migrate": "prisma migrate deploy",
    "seed": "node src/server/seed.js",
    "// ---------------------- ALL-IN-ONE ----------------------": "",
    "start:all": "npm run prisma:generate && npm run prisma:migrate && npm run seed  && concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "deploy:all": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run seed && npm run client:build && npm run server:start",
    "// ---------------------- UTILITIES ----------------------": "",
    "lint": "eslint ."
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bootstrap": "^5.3.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "i18next": "^25.3.6",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.7",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-markdown": "^10.1.0",
    "serverless-http": "^4.0.0",
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.12.0",
    "react-router-dom": "^7.7.1",
    "sass": "^1.90.0",
    "sass-embedded": "^1.89.2",
    "vite": "^7.0.4"
  }
}
